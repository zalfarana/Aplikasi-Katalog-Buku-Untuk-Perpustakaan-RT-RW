<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp" android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp" android:id="@+id/cvData"
    app:cardElevation="4dp"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_horizontal"> <ImageView
    android:id="@+id/imgCover"
    android:layout_width="100dp" android:layout_height="150dp" android:src="@drawable/buku"
    android:scaleType="centerCrop" android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul Buku Contoh yang Sangat Panjang Sekali"
        android:textStyle="bold"
        android:textSize="14sp" android:textColor="#000000"
        android:maxLines="2" android:ellipsize="end" android:textAlignment="center"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/txtPenulis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Penulis Contoh"
        android:textSize="12sp" android:textColor="#666666"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnEditBuku"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:minHeight="36dp" android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Edit Buku"
        android:textSize="12sp"
        android:backgroundTint="#1769FF"
        android:textColor="@android:color/white" />

</LinearLayout>
</androidx.cardview.widget.CardView>